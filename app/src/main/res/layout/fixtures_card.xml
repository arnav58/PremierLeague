<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="#33CCCC"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/home_team"
        android:background="@drawable/layout_bg"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="16dp">

        <TextView
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:id="@+id/first_team_name"
            android:text="Team Name"
            android:layout_marginTop="4dp"
            android:layout_marginLeft="8dp"
            android:textSize="18sp"/>

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/applogo"
            android:layout_toRightOf="@+id/first_team_name"/>
    </RelativeLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/results"
        android:layout_toRightOf="@id/home_team"
        android:text="19th Nov"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:textSize="18sp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/time_of_fixture"
        android:text="18:00"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/results"/>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/away_team"
        android:layout_toRightOf="@+id/results"
        android:background="@drawable/layout_bg"
        android:layout_marginRight="8dp"
        android:layout_marginTop="16dp">

        <TextView
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:id="@+id/second_team_name"
            android:layout_toRightOf="@+id/fixtureLayoutImage"
            android:text="Team Name"
            android:layout_marginTop="4dp"
            android:layout_marginLeft="8dp"
            android:textSize="18sp"/>

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/applogo"
            android:id="@+id/fixtureLayoutImage"/>
    </RelativeLayout>
</RelativeLayout>